{
	"extends": "//",
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"files": {
		"includes": [
			"**",
			"!**/.wrangler/**/*",
			"!**/dist/**/*",
			"!**/node_modules/**/*",
			"!**/worker-configuration.d.ts"
		]
	},
	"formatter": {
		"formatWithErrors": false,
		"indentWidth": 2,
		"lineWidth": 80
	},
	"linter": {
		"rules": {
			"correctness": {
				"noUnusedImports": "off"
			},
			"nursery": {
				"useSortedClasses": "off"
			}
		}
	}
}
